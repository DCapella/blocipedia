<h1>
  <%= @wiki.title %> <br>
  <small>
    <h5>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
    </h5>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <% if user_is_authorized_for_private_wiki?(@wiki) %>
      <p><h4><%= markdown(@wiki.body) %></h4></p>
    <% else %>
      <p><i>This post was made private by <b><%= @wiki.user.email %></b>.</i></p>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% if user_is_authorized_for_wiki?(@wiki) %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
  </div>
  <% if @wiki.private %>
    <div class="col-md-8">
      <h3>Collaborators</h3>
      <%= render @wiki.collaborators %>
      </br>
      <% if current_user %>
        <%= render 'collaborators/form', collaborator: Collaborator.new, wiki: @wiki %>
      <% end %>
    </div>
  <% end %>
</div>
